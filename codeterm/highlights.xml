<list>
  <match name="Constants">
    <regex>[A-Z]+\w*</regex>
    <style>
      <fg color-rgb="255,255,255"/>
      <font italic="true"/>
    </style>
  </match>
  <match name="Integer">
    <regex>\bint\b</regex>
    <style>
      <fg color-rgb="200,225,255"/>
      <font bold="true"/>
    </style>
  </match>
  <match name="Double">
    <regex>\bdouble\b</regex>
    <style>
      <fg color-rgb="200,225,255"/>
      <font bold="true"/>
    </style>
  </match>
  <match name="String">
    <regex>\bstring\b</regex>
    <style>
      <fg color-rgb="200,225,255"/>
      <font bold="true"/>
    </style>
  </match>
  <match name="Object">
    <regex>\bobject\b</regex>
    <style>
      <fg color-rgb="200,225,255"/>
      <font bold="true"/>
    </style>
  </match>
  <match name="Method">
    <regex>[a-zA-Z_]+\w*\(</regex>
    <style>
      <fg reference="../../../match/style/fg"/>
      <font bold="true"/>
    </style>
  </match>
  <match name="String Constant">
    <regex>&quot;.*&quot;</regex>
    <style>
      <fg color-rgb="255,200,80"/>
      <font italic="true"/>
    </style>
  </match>
  <match name="Comment">
    <regex>#.*</regex>
    <style>
      <fg color-rgb="255,255,160"/>
      <font italic="true"/>
    </style>
  </match>
  <match name="if">
    <regex>\bif\b</regex>
    <style>
      <fg color-rgb="200,225,255"/>
      <font bold="true"/>
    </style>
  </match>
  <match name="func">
    <regex>\bfunc\b</regex>
    <style>
      <fg color-rgb="200,225,255"/>
      <font bold="true"/>
    </style>
  </match>
  <match name="endfunc">
    <regex>\bendfunc\b</regex>
    <style>
      <fg color-rgb="200,225,255"/>
      <font bold="true"/>
    </style>
  </match>
  <match name="endif">
    <regex>\bendif\b</regex>
    <style>
      <fg color-rgb="200,225,255"/>
      <font bold="true"/>
    </style>
  </match>
  <match name="while">
    <regex>\bwhile\b</regex>
    <style>
      <fg color-rgb="200,225,255"/>
      <font bold="true"/>
    </style>
  </match>
  <match name="else">
    <regex>\belse\b</regex>
    <style>
      <fg color-rgb="200,225,255"/>
      <font bold="true"/>
    </style>
  </match>
  <match name="elsif">
    <regex>\belsif\b</regex>
    <style>
      <fg color-rgb="200,225,255"/>
      <font bold="true"/>
    </style>
  </match>
</list>