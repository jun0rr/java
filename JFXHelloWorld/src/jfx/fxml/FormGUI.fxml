<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" 
					id="grid" styleClass="root" 
					alignment="CENTER" hgap="10" vgap="10"   
					fx:controller="jfx.FormGUIController">
	
	<stylesheets>
    <URL value="@/jfx/css/FormGUI.css" />
  </stylesheets>
	
	<Text text="Welcome" fx:id="welcome" id="welcome"
				GridPane.columnIndex="0" 
				GridPane.rowIndex="0" 
				GridPane.columnSpan="2"/>
	
	<Label text="User:" fx:id="userLabel" id="userLabel"
				 GridPane.columnIndex="0" 
				 GridPane.rowIndex="1"/>
	
	<TextField fx:id="user" id="user"
						 GridPane.columnIndex="1" 
						 GridPane.rowIndex="1"/>
	
	<Label text="Password:" fx:id="pwdLabel" id="pwdLabel"
				 GridPane.columnIndex="0" 
				 GridPane.rowIndex="2"/>
	
	<PasswordField fx:id="pwd" id="pwd"
								 GridPane.columnIndex="1" 
								 GridPane.rowIndex="2"/>
	
  <HBox alignment="CENTER_RIGHT" 
				spacing="10" 
				GridPane.columnIndex="0" 
				GridPane.rowIndex="4" 
				GridPane.columnSpan="2">
		<Button fx:id="login" id="login" text="Login" 
						onAction="#handleLogin">
			<graphic>
				<ImageView fitWidth="18" preserveRatio="true">
					<Image url="@/jfx/img/lock_128.png"/>
				</ImageView> 
			</graphic>
		</Button>
  </HBox>
	
	<HBox spacing="10" alignment="CENTER" 
				GridPane.columnIndex="0" 
				GridPane.rowIndex="5" 
				GridPane.columnSpan="2">
		<Text fx:id="msg" id="msg" text="Hello!"/>
	</HBox>
	
</GridPane>
